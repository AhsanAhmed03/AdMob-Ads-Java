<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/banner_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#535353"
        android:minHeight="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="AD IS LOADING..."
            android:textSize="24sp"
            android:layout_gravity="center"/>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <Button
        android:id="@+id/simple_banner_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_shimmer"/>

    <Button
        android:id="@+id/medium_rectangle_banner_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simple_banner_button"/>

    <Button
        android:id="@+id/large_banner_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medium_rectangle_banner_button"/>

    <Button
        android:id="@+id/interstital_ad_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Interstial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>